// app global css
@import "~variables"

html, body, #q-app
  padding 0
  margin 0
  width 100%
  height 100%
  overflow auto
  font-size 20px
  color $default-color

@font-face
  font-family led-number
  src url("~assets/led-number.ttf")

.font-led
  font-family led-number

.title-1
  font-size 30px
  font-weight bold

.title-2
  font-size 24px
  font-weight bold

.title-3
  font-size 14px
  font-weight bold

.margin-top-100
  margin-top 100px

.location-left
  position absolute
  left 0
  top 50%
  z-index 10
.location-right
  position absolute
  right 0
  top 50%
  z-index 10
